   <podspec>
      <config>
        <source url="https://cdn.cocoapods.org/"/>
      </config>
      <pods use-frameworks="true">
        <pod name="FirebaseCore" spec="~> 10.25.0" />
        <pod name="FirebaseInstallations" spec="~> 10.25.0" />
        <pod name="FirebaseAnalytics" spec="~> 10.25.0" />
        <pod name="FirebaseCrashlytics" spec="~> 10.25.0" />
        <pod name="FirebaseMessaging" spec="~> 10.25.0" />
        <pod name="FirebaseAuth" spec="~> 10.25.0" />
        <pod name="FirebaseRemoteConfig" spec="~> 10.25.0" />
        <pod name="FirebasePerformance" spec="~> 10.25.0" />
	      <pod name="FirebaseDynamicLinks" spec="~> 10.25.0" />
      </pods>
    </podspec>

    <!-- Fix CocoaPods configuration conflicts -->
    <config-file target="*-Debug.xcconfig" parent="IPHONEOS_DEPLOYMENT_TARGET">
      <string>12.0</string>
    </config-file>
    <config-file target="*-Release.xcconfig" parent="IPHONEOS_DEPLOYMENT_TARGET">
      <string>12.0</string>
    </config-file>
    <config-file target="*-Debug.xcconfig" parent="ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES">
      <string>YES</string>
    </config-file>
    <config-file target="*-Release.xcconfig" parent="ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES">
      <string>YES</string>
    </config-file>
    <config-file target="*-Debug.xcconfig" parent="LD_RUNPATH_SEARCH_PATHS">
      <string>$(inherited) @executable_path/Frameworks @loader_path/Frameworks</string>
    </config-file>
    <config-file target="*-Release.xcconfig" parent="LD_RUNPATH_SEARCH_PATHS">
      <string>$(inherited) @executable_path/Frameworks @loader_path/Frameworks</string>
    </config-file>



